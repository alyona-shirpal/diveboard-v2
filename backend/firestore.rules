rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if
          request.time < timestamp.date(2022, 4, 13);
    }

    match /user-preferences/{userId} {
    			allow read, write: if
          	userId == request.auth.uid;
    }

    match /notification/{userId} {
    			allow read, write, update: if
          	userId == request.auth.uid;
    }
     match /users/{userId} {
    			allow read, write, update, delete: if
          	userId == request.auth.uid;
    }
  }
}
